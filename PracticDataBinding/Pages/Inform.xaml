<Page x:Class="PracticDataBinding.Pages.Inform"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticDataBinding.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="200"
      Title="Inform">
    <Grid>
        <StackPanel VerticalAlignment="Center"  HorizontalAlignment="Right"  Orientation="Horizontal">
            <TextBlock Text="{Binding food.Name}" Style="{DynamicResource TextBlockStyle}"/>
            <TextBlock  Style="{DynamicResource TextBlockStyle}"  Text="{Binding food.Price}"/>
            <TextBlock  Style="{DynamicResource TextBlockStyle}" Text="{Binding food.ImageSource}" />
        </StackPanel>
    </Grid>
</Page>
